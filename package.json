{
  "name": "api-tdd-ddd-clean-architecture",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "@faker-js/faker": "7.3.0",
    "@types/cors": "2.8.12",
    "@types/express": "4.17.13",
    "@types/jest": "28.1.6",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "18.0.6",
    "@types/supertest": "2.0.12",
    "@types/validator": "13.7.4",
    "@typescript-eslint/eslint-plugin": "5.0.0",
    "eslint": "8.0.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-standard-with-typescript": "22.0.0",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-n": "15.0.0",
    "eslint-plugin-promise": "6.0.0",
    "git-commit-msg-linter": "4.1.3",
    "husky": "8.0.1",
    "jest": "28.1.3",
    "lint-staged": "13.0.3",
    "supertest": "6.2.4",
    "ts-jest": "28.0.7",
    "ts-node-dev": "2.0.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "4.7.4"
  },
  "scripts": {
    "dev": "tsnd --respawn -r tsconfig-paths/register src/main/server.ts",
    "start": "pm2-runtime ./dist/main/server.js",
    "build": "tsc --build && tsc-alias -p tsconfig.json",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "npm test -- -c jest-unit.config.js --watch",
    "test:integration": "npm test -- -c jest-integration.config.js --watch",
    "test:staged": "npm test -- -c jest.config.js --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "postinstall": "husky install",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.ts": [
      "eslint 'src/**' --fix",
      "npm run test:staged"
    ]
  },
  "dependencies": {
    "argon2": "0.28.7",
    "cors": "2.8.5",
    "dotenv": "16.0.1",
    "express": "4.18.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "6.5.0",
    "tsc-alias": "1.7.0",
    "url-slug": "^3.0.4",
    "validator": "13.7.0"
  },
  "engines": {
    "node": "16.x"
  }
}
